          </div>
          <Text type="sm" class="ml-[10px] tracking-normal text-[#231F20]">Indoor facilities for chess, table tennis</Text>
        </div>
        <div class="pt-[32px]" /> 
        <div class="cursor-pointer" data-modal-target="campus-facility1" data-target-deck="deck-campus-facility1">
          <Text type="sm" class='text-[18px] uppercase text-accentDark tracking-[1.8px] underline font-bold'>VIEW all Sports</Text>
        </div>
      </div>

      <DeckCard
        deckContainerClass="relative left-2 max-md:-left-2"
        cardHoverStyle={["border-accent"]}
        gallery={deckCardWithDescription}
        id="campus-facility1"
        description={false}
